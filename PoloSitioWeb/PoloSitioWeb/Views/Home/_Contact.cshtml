<!-- ======= Contact Section ======= -->

<section id="contact" class="contact section-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Contacto</h2>
            <p>Podés ponerte en contacto con nosotros por cualquiera de estos medios</p>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="info-box mb-4">
                    <i class="bx bx-map"></i>
                    <h3>Nuestras oficinas</h3>
                    <p>Av. San Martín 2529, Mina Clavero, Córdoba, Argentina</p>
                </div>
            </div>

            <div class="col-md-6">
                <div class="info-box  mb-4">
                    <i class="bx bx-envelope"></i>
                    <h3>Email</h3>
                    <p>polotecnologico@minaclavero.gov.ar</p>
                </div>
            </div>

            @*<div class="col-lg-3 col-md-6">
                    <div class="info-box  mb-4">
                        <i class="bx bx-phone-call"></i>
                        <h3>Call Us</h3>
                        <p>+1 5589 55488 55</p>
                    </div>
                </div>*@

        </div>

        <div class="row">

            <div class="col-lg-6 ">
                <iframe class="mb-4 mb-lg-0" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3393.503059014683!2d-65.0069420848442!3d-31.729467081301017!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x942d2735ea60f933%3A0x61a921e4ca843cc4!2sPolo%20Tecnol%C3%B3gico%20Mina%20Clavero!5e0!3m2!1ses-419!2sar!4v1615401612799!5m2!1ses-419!2sar" frameborder="0" style="border:0; width: 100%; height: 384px;" allowfullscreen></iframe>
            </div>

            <div class="col-lg-6" id="ContactoJs">
                <fieldset  :disabled="p_DisabledForm">
                    <form v-on:submit.prevent="SendMail" enctype="multipart/form-data"method="post" role="form" class="php-email-form">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <input type="text" name="name" class="form-control" v-model="NombreApellido" id="name" placeholder="Nombre y Apellido" required>
                            </div>
                            <div class="col-md-6 form-group mt-3 mt-md-0">
                                <input type="email" class="form-control" name="email" id="email" v-model="Email" placeholder="Email" required>
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <input type="text" class="form-control" name="subject" id="subject" v-model="Asunto" placeholder="Asunto" required>
                        </div>
                        <div class="form-group mt-3">
                            <textarea class="form-control" name="message" rows="5" placeholder="Mensaje" v-model="Mensaje" required></textarea>
                        </div>
                        <div class="my-3">
                            <div class="loading" :class="p_DisabledForm ? 'd-block' : ''">Enviando</div>
                            <div class="error-message" :class="p_ErrorMessage != '' ? 'd-block' : ''">{{p_ErrorMessage}}</div>
                            <div class="sent-message" :class="p_SuccessMessage != '' ? 'd-block' : ''">{{p_SuccessMessage}}</div>
                        </div>
                        <div class="text-center"><button type="submit">Enviar mensaje</button></div>
                    </form>
                </fieldset>
            </div>

        </div>

    </div>
</section><!-- End Contact Section -->

